FROM localstack/localstack

ARG LOCALSTACK_DEBUG=0
ENV LOCALSTACK_DEBUG=${LOCALSTACK_DEBUG}


ARG LOCALSTACK_VOLUME_DIR=./volume
ENV LOCALSTACK_VOLUME_DIR=${LOCALSTACK_VOLUME_DIR}
# Define mount points for volumes
VOLUME ["${LOCALSTACK_VOLUME_DIR}", "/var/run/docker.sock"]

ENV LOCALSTACK_DYNAMODB_SHARE_DB=1

EXPOSE 4566 4510-4559